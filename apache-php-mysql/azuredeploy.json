{
    "parameters": {
        "siteName": {
            "type": "string"
        },
        "servicePlanName": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "West US",
            "allowedValues": [
                "West US",
                "West Europe",
                "Southeast Asia"
            ]
        },
        "sku": {
            "type": "string",
            "defaultValue": "S3",
            "allowedValues": [
                "B2",
                "B3",
                "S2",
                "S3"
            ]
        },
        "databaseName": {
            "type": "string",
            "defaultValue": "appdb"
        },
        "databaseUsername": {
            "type": "string",
            "defaultValue": "appuser"
        },
        "databasePassword": {
            "type": "securestring",
            "defaultValue": "MS173m_QN"
        },
        "phpmyadminUsername": {
            "type": "string",
            "defaultValue": "phpmyadmin"
        },
        "phpmyadminPassword": {
            "type": "securestring",
            "defaultValue": "MS173m_QN"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "name": "[parameters('siteName')]",
            "properties": {
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "DATABASE_NAME",
                            "value": "[parameters('databaseName')]"
                        },
                        {
                            "name": "DATABASE_USERNAME",
                            "value": "[parameters('databaseUsername')]"
                        },
                        {
                            "name": "DATABASE_PASSWORD",
                            "value": "[parameters('databasePassword')]"
                        },
                        {
                            "name": "PHPMYADMIN_USERNAME",
                            "value": "[parameters('phpmyadminUsername')]"
                        },
                        {
                            "name": "PHPMYADMIN_PASSWORD",
                            "value": "[parameters('phpmyadminPassword')]"
                        }
                    ],
                    "appCommandLine": "",
                    "linuxFxVersion": "DOCKER|fanjeffrey/apm:0.2"
                },
                "name": "[parameters('siteName')]",
                "serverFarmId": "[parameters('servicePlanName')]",
                "hostingEnvironment": ""
            },
            "apiVersion": "2016-03-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[parameters('servicePlanName')]"
            ]
        },
        {
            "apiVersion": "2016-09-01",
            "name": "[parameters('servicePlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('location')]",
            "properties": {
                "name": "[parameters('servicePlanName')]",
                "workerSizeId": "1",
                "reserved": true,
                "numberOfWorkers": "1",
                "hostingEnvironment": ""
            },
            "sku": {
                "Name": "[parameters('sku')]"
            },
            "kind": "linux"
        }
    ],
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0"
}
